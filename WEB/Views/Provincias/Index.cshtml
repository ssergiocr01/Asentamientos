@model IEnumerable<Domain.Models.Provincia>

@{
    ViewBag.Title = "Provincias";
    ViewBag.Page = "Listado";
}

<div class="box box-success">
    <div class="box-header">
        <h4 class="box-title">
            @ViewBag.Title.
            @Html.ActionLink("Crear Provincia", "Create", new { }, new { @class="btn btn-primary"})
        </h4>
    </div>
    <div class="box-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    Opciones
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IDProvincia }, new { @class="btn btn-warning"})
                        @Html.ActionLink("Detalles", "Details", new { id = item.IDProvincia }, new { @class = "btn btn-info" }) 
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IDProvincia }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


